<div class="container">
	<br><br><br>
  <div class="login-logo">
    <a href="../../index2.html"><b>Cloudband</b>Solution</a>
</div>
	<div class="col-xs-4 col-xs-offset-4">
		<div class="panel panel-primary">
			<div class="panel-heading" align="center">Log In to start your session</div>
				<div class="panel-body" style="position: relative; margin-left: 3%; margin-right: 3%;">
					<div class="ui form" style="font-size: 100%">
						
						<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
								<%= f.input :email, required: false, label: false, placeholder: "E-mail", autofocus: true%>
                <br>
						    <%= f.input :password, required: false, label: false, placeholder: "Password" %>
                <br>
						    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
						  <div class="pull-right">
                <%= f.button :submit, "Log in", class: "btn btn-primary" %>
						<% end %>
					</div>
							<%= render "users/shared/links" %>
				</div>
			</div>
		</div>
</div>
