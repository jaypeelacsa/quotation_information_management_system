%section.content-header
  %h1
    Company Expenses
    %small Reports
%section.content
  .row
    .col-md-3
      .box.box-default.box-solid
        .box-header
          %h3.box-title Filter Tool
        .box-body
          = link_to "Print All Expenses", company_expenses_print_all_path, class: "ui button"
          %br
          %br
          = form_tag send("company_expenses_print_all_path"),method: "GET" do
            .row
              .col-md-12
                .ui.icon.input
                  %input{:name => "start_date", :placeholder => "Expensed From", class: "datepick"}
                  %i.inverted.circular.search.link.icon
            %br
            .row
              .col-md-12
                .ui.icon.input
                  %input{:name => "end_date", :placeholder => "Expensed To", class: "datepick"}
                  %i.inverted.circular.search.link.icon


            %br
            .pull-right
              .ui.buttons
                %button.ui.positive.button Search
                .or
                = link_to "Clear", company_expenses_print_path, class: "ui button"