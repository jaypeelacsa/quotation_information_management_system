%section.content-header
  %h1
    Costings
    %small Edit
%section.content
  = simple_form_for [@proposal, @costing], defaults: { wrapper_html: { class: 'form-group' }, input_html: {class: 'form-control'} }, html: { multipart: true, novalidate: true } do |c|
    %form{:role => "form"}
      .field
        = c.input :description
      .field
        = c.input :cost
      = c.submit class: "btn btn-success btn-flat"