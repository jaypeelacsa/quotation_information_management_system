= simple_form_for [@proposal, @software_browser], defaults: { wrapper_html: { class: 'form-group' }, input_html: {class: 'form-control'} }, html: { multipart: true, novalidate: true } do |sb|
  %form{:role => "form"}
    .field
      = sb.input :name
    .row
      .col-md-10
      .col-md-2
        %button.btn.btn-primary.btn-flat
          %i.save.icon>
          SAVE