
%section.content-header
  %h1
    Software Requirements
    %small Edit
%section.content
  = simple_form_for [@proposal, @software_requirement], defaults: { wrapper_html: { class: 'form-group' }, input_html: {class: 'form-control'} }, html: { multipart: true, novalidate: true } do |sr|
    %form{:role => "form"}
      .field
        = sr.input :component
      .field
        = sr.input :cost
      = sr.submit class: "btn btn-success btn-flat"