= simple_form_for [@proposal, @terms_condition], defaults: { wrapper_html: { class: 'form-group' }, input_html: {class: 'form-control'} }, html: { multipart: true, novalidate: true } do |tc|
  %form{:role => "form"}
    .field
      = tc.input :name
    .field
      = tc.input :content
    .row
      .col-md-10
      .col-md-2
        %button.btn.btn-primary
          %i.save.icon>
          SAVE