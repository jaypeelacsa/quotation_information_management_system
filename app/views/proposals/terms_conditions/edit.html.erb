<section class="content-header">
	<h1>Terms And Conditions
		<small>Edit</small>
	</h1>
</section>

<section class="content">
	<%= simple_form_for [@proposal, @terms_condition], defaults: { wrapper_html: { class: 'form-group' }, input_html: {class: 'form-control'} }, html: { multipart: true, novalidate: true } do |tc| %>
  <form role="form">
     <div class="field">
      <%= tc.input :name %>
     </div>
     <div class="field">
      <%= tc.input :content %>
     </div>
    <%= tc.submit class: "btn btn-success" %>
  </form>
  <% end %>
</div>

</section>

