%section.content-header
  %h1
    Proposals
    %small Control Panel
%section.content
  .row
  = simple_form_for [@proposal, @feature_list], defaults: { wrapper_html: { class: 'form-group' }, input_html: {class: 'form-control'} }, html: { multipart: true, novalidate: true } do |f|
    %form{:role => "form"}
      .col-md-12
        .box.box-default.box-solid
          .box-header
            %h3.box-title New
          .box-body
            .field
              = f.association :parent_feature_list, as: :hidden
              = f.input :name
              .field
                = f.input :description
          .box-footer
            .row
              .col-md-10
              .col-md-2
                %button.btn.btn-primary
                  %i.save.icon>
                  SAVE
