%section.content-header
  %h1
    Work Experience
    %small Edit
%section.content
  .row
    = simple_form_for [@billing, @billing_particular], defaults: { wrapper_html: { class: 'form-group' }, input_html: {class: 'form-control'} }, html: { multipart: true, novalidate: true } do |f|
      %form{:role => "form"}
        .col-md-6
          .field
            = f.input :particular
        .col-md-3
          .field
            = f.input :currency
        .col-md-3
          .field
            = f.input :amount
        %center
          = f.submit class: "btn btn-success"