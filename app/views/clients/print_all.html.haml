%body{:onload => "window.print();"}
  .wrapper
    - @company_profiles.each do |company|
      %section.invoice
        .row
          .col-xs-12
            %center
              = image_tag company.logo.url(:medium)
            %center
              %small
                = company.address
            %h3
              %center
                = @header
            %br
    %table.table.table-bordered
      %thead
        %tr
          %th No.
          %th Client Name
          %th Telephone
          %th Company Name
          -if @header == "List Of All active Clients"
          -elsif @header == "List Of All inactive Clients"
          -else
            %th Status
      %tbody
        - @num = 1
        - @clients.each do |c|
          %tr
            %td= @num
            %td= c.client_name
            %td= c.telephone
            %td= c.company_name
            -if @header == "List Of All active Clients"
            -elsif @header == "List Of All inactive Clients"
            -else
              %td= c.status
            - @num += 1