<section class="content-header">
	<h1>Information To Add:</h1> 
</section>
	<section class="content">
		<div class="well">
			<div class="box box-success">
				<%= simple_form_for @client, defaults: { wrapper_html: { class: 'form-group' }, input_html: {class: 'form-control'} }, html: { multipart: true, novalidate: true } do |c| %>
					<form role="form">
						<div class="box-body">
							<div class="form-group">
							<%= c.input :client_name %>
							</div>
								<div class="form-group">
								<%= c.input :address %>
							</div>
							<div class="form-group">
								<%= c.input :telephone %>
							</div>
							<div class="form-group">
								<%= c.input :email_address %>
							</div>
							<div class="form-group">
								<%= c.input :company_name %>
							</div>
							<div class="form-group">
									<%= c.input :website %>
							</div>
							<div class="field">
					    	 <%= c.input :status, as: :select, collection: Client::STATUS %>      
					    </div>
							<div class="form-group">
									<%= c.input :tin %>
							</div>
							<div class="form-group">
									<%= c.input :company_address %>
							</div>
						<div class="box-footer">
							<button class="btn btn-success"><i class="save icon"></i>SAVE</button>
						</div>
					</form>
				<% end %>
			</div>
		</div>
	</section>