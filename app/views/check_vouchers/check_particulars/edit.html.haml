%section.content-header
  %h1
    Check Particular
    %small Edit
%section.content
  = simple_form_for [@check_voucher, @check_particular], defaults: { wrapper_html: { class: 'form-group' }, input_html: {class: 'form-control'} }, html: { multipart: true, novalidate: true } do |cp|
    %form{:role => "form"}
      .col-md-12
        .box.box-default.box-solid
          .box-header
            %h3.box-title Edit
          .box-body
            .field
              = cp.input :particular
            .field
              = cp.input :amount
            .field
              = cp.input :amount_in_word
          .box-footer
            .row
              .col-md-10
              .col-md-2
                %button.btn.btn-primary
                  %i.save.icon>
                  SAVE