%section.content-header
  %h1
    Check Voucher
    %small Control Panel
%section.content
  .row
    .col-md-12
      .box.box-default.box-solid
        .box-header
          %h3.box-title Check Voucher List
        .box-body
          .row
            .col-md-9
            .col-md-3
              - if ( current_user.role == 'Admin' )
                = link_to "Back", :back, class: "btn btn-flat btn-success"
                = link_to "Add New Check Voucher", new_check_voucher_path, class: "btn btn-block btn-primary"
                
          %table.ui.selectable.celled.table
            %thead
              %tr
                %th Reference No
                %th Payee
                %th Date
                %th Actions
            %tbody
              - @check_vouchers.each do |cv|
                %tr
                  %td= cv.to_s
                  %td= cv.payee
                  %td= cv.check_date
                  %td
                    = link_to "Details", check_voucher_path(cv.id), class: "btn btn-flat btn-xs btn-default"