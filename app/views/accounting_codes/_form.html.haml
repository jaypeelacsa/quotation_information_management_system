%section.content-header
  %h1 Information To Add:
%section.content
  .well
    .box.box-success
      = simple_form_for @accounting_code, defaults: { wrapper_html: { class: 'form-group' }, input_html: {class: 'form-control'} }, html: { multipart: true, novalidate: true } do |ac|
        %form{:role => "form"}
          .box-body
            .form-group
              = ac.input :name
            .form-group
              = ac.input :code
          .box-footer
            %button.btn.btn-success
              %i.save.icon>
              SAVE