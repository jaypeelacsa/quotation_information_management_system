%section.content-header
  %h1
    Accounting Code
    %small Control Panel
%section.content
  .row
    .col-md-3
      .box.box-default.box-solid
        .box-header
          %h3.box-title Search Tool
          .pull-right
            %i.inverted.circular.search.link.icon
        .box-body
          = render partial: "search"

    .col-md-9
      .box.box-default.box-solid
        .box-header
          %h3.box-title Accounting Code List
        .box-body
          %table.ui.selectable.celled.table
            %thead
              %tr
                %th Name
                %th Code
                %th Actions
            %tbody
              - @accounting_codes.each do |ac|
                %tr
                  %td= ac.name
                  %td= ac.code
                  %td
                    = link_to "Details", accounting_code_path(ac.id), class: "btn btn-flat btn-xs btn-default"
                      