%section.content-header
  %h1
    Accounting Code
    %small Control Panel
%section.content
  .row
    .col-md-3
      .box.box-default.box-solid
        .box-header
          %h3.box-title Search Tool
        .box-body
          = render partial: "search"

    .col-md-9
      .box.box-default.box-solid
        .box-header
          %h3.box-title Accounting Code List
        .box-body
          - if ( current_user.role == 'Admin' )
            .pull-right   
              = link_to "Add New Accounting Code", new_accounting_code_path, class: "btn btn-block btn-primary"
          %table.ui.selectable.celled.table
            %thead
              %tr
                %th Name
                %th Code
                %th Actions
            %tbody
              - @accounting_codes.each do |ac|
                %tr
                  %td= ac.name
                  %td= ac.code
                  - if ( current_user.role == 'Admin' )
                    %td
                      = link_to "Details", accounting_code_path(ac.id), class: "btn btn-flat btn-xs btn-default"
                      