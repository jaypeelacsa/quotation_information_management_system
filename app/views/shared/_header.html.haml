!!!
%html
  %head
    %meta{:charset => "utf-8"}
      %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
        %title AdminLTE 2 | Dashboard
        %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no", :name => "viewport"}
          %link{:href => "bootstrap/css/bootstrap.min.css", :rel => "stylesheet"}
            %link{:href => "https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css", :rel => "stylesheet"}
              %link{:href => "https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css", :rel => "stylesheet"}
                %link{:href => "dist/css/AdminLTE.min.css", :rel => "stylesheet"}
                  %link{:href => "dist/css/skins/_all-skins.min.css", :rel => "stylesheet"}
                    %link{:href => "plugins/iCheck/flat/blue.css", :rel => "stylesheet"}
                      %link{:href => "plugins/morris/morris.css", :rel => "stylesheet"}
                        %link{:href => "plugins/jvectormap/jquery-jvectormap-1.2.2.css", :rel => "stylesheet"}
                          %link{:href => "plugins/datepicker/datepicker3.css", :rel => "stylesheet"}
                            %link{:href => "plugins/daterangepicker/daterangepicker-bs3.css", :rel => "stylesheet"}
                              %link{:href => "plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css", :rel => "stylesheet"}
    %body.hold-transition.skin-blue.sidebar-collapse.sidebar-mini
      .wrapper
        %header.main-header
          %a.logo{:href => "index2.html"}
            %span.logo-mini
              %b> <
              CB
            %span.logo-lg
              %b> Cloudband
          %nav.navbar.navbar-static-top{:role => "navigation"}
            %a.sidebar-toggle{"data-toggle" => "offcanvas", :role => "button"}
              %span.sr-only Toggle navigation
              / #sidebar
            .pull-right
              %ul.dropdown.user.user-menu
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                %img.img-circle{:src => "/assets/men.jpg", :height => "35", :width => "40"}
                  %span.hidden-xs 
                  - if user_signed_in?
                    %font{:color => "white"}
                      = current_user.username
              %ul.dropdown-menu
                / User image
                %li.user-header
                  %img.img-circle{:src => "/assets/men.jpg", :height => "55", :width => "90"}
                    %b
                      = current_user.to_s
                %li.user-footer
                  .ui.buttons
                    = link_to "Update Profile", edit_user_registration_path, class: "ui button"
                    .or
                    = link_to "Sign Out", destroy_user_session_path, class: "ui button", method: :delete, data: { Confirm: "Are you sure?" }
.control-sidebar-bg
  %script{:src => "plugins/jQuery/jQuery-2.1.4.min.js"}
  %script{:src => "https://code.jquery.com/ui/1.11.4/jquery-ui.min.js"}
  :javascript
    $.widget.bridge('uibutton', $.ui.button);
  %script{:src => "dist/js/app.js", :type => "text/javascript"}
