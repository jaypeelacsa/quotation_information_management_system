- @company_profiles.each do |company|
  %section.content-header
    %h1
      Company
      %small Profile
      .pull-right
        - if ( current_user.role == 'Admin' )
          - if (CompanyProfile.count == 0)
            = link_to "Add Company Information", new_company_profile_path, class: "btn btn-flat btn-xs btn-primary"
          - else
            = link_to "Update Company Information", edit_company_profile_path(company.id), class: "btn btn-flat btn-xs btn-success"
  %section.content
    .row
      .col-md-12
        .nav-tabs-custom
          %ul.nav.nav-tabs
            %li.active
              %a{"aria-expanded" => "true", "data-toggle" => "tab", :href => "#one"} Details
            %li
              %a{"aria-expanded" => "false", "data-toggle" => "tab", :href => "#two"} Mission and Vision
            %li
              %a{"aria-expanded" => "false", "data-toggle" => "tab", :href => "#third"} About Us
          .tab-content
            #one.tab-pane.active
              .row
                .col-md-5
                  %dl
                    %dt Company Name
                    %dd
                      = company.company_name
                    %br/
                    %dt Website
                    %dd
                      = company.website
                    %br/
                    %dt Address
                    %dd
                      = company.address
                    %br/
                    %dt Telephone Number
                    %dd
                      = company.telephone
                    %br/
                    %dt TIN Number
                    %dd
                      = company.tin
                .col-md-7
                = image_tag company.logo.url(:medium)
            #two.tab-pane
              %dl
                %dt Mission
                %dd
                  = company.mission
                %br/
                %dt Vision
                %dd
                  = company.vission
            #third.tab-pane
              .box-body
                .box-header.with-border
                .box-body.no-padding
                  %ul.users-list.clearfix
                    %li
                      %img{:alt => "User Image", :src => "/assets/avatar5.png"}
                        %a.users-list-name{:href => "#"} Raphael Alampay
                        %span.users-list-position Manager/Founder
                        %br
                        %span.users-list-company Cloudband Solution Co.
                    %li
                      %img{:alt => "User Image", :src => "/assets/avatar2.png"}
                        %a.users-list-name{:href => "#"} Kathleen Zita Gayle Logmao
                        %span.users-list-position Co Founder
                        %br
                        %span.users-list-company Cloudband Solution Co.
                    %li
                      %img{:alt => "User Image", :src => "/assets/avatar3.png"}
                        %a.users-list-name{:href => "#"} Lani Gonzales
                        %span.users-list-position Admin
                        %br
                        %span.users-list-company Cloudband Solution Co.
                    %li
                      %img{:alt => "User Image", :src => "/assets/avatar04.png"}
                        %a.users-list-name{:href => "#"} Aljon Laureano
                        %span.users-list-position Programmer
                        %br
                        %span.users-list-company Cloudband Solution Co.
