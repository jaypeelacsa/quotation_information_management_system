%body{:onload => "window.print();"}
  .wrapper
  - @company_profiles.each do |company|
    %section.invoice
      .row
        .col-xs-12
          %center
            = image_tag company.logo.url(:medium)
          %center
            %small
              = company.address
          %h3
            %center
              EMPLOYEE INFORMATION
          %br
          %br
      .row.invoice-info
        .col-md-6.invoice-col
          %dl
            %dt Name:
            %dd= @employee.to_s
            %dt Position:
            %dd= @employee.position
            %dt Status:
            %dd= @employee.status
            %dt Date Employed:
            %dd= @employee.date_employed
            %dt Working Years:
            %dd= @employee.total_year
        .col-md-6.invoice-col
          %dl
            %dt Gender:
            %dd= @employee.gender
            %dt Birthdate:
            %dd= @employee.birthdate
            %dt Email:
            %dd= @employee.email
            %dt Contact No:
            %dd= @employee.contact_no
            %dt Address:
            %dd= @employee.address
      .row
        .col-xs-12.table-responsive
          %center
            %h4 Working Experiences List
            %br
          %table.table.table-bordered
            %thead
              %tr
                %th No.
                %th Title
                %th Company Name
                %th Address
                %th Date Ended
            %tbody
              - @num = 1
              - @work_experiences.each do |we|
                %tr
                  %td= @num
                  %td= we.title
                  %td= we.company_name
                  %td= we.company_address
                  %td= we.date_ended
                  - @num += 1
