%section.content-header
  %h1
    Employee
    %small Information
%section.content
  .row
    .col-md-12
      = link_to "UPDATE", edit_employee_path(@employee.id), class: "btn btn-flat btn-xs btn-success"
      = link_to "REMOVE", employee_path(@employee.id), data: {:confirm => "Are you sure?"}, :method => :delete, class: "btn btn-flat btn-xs btn-danger"
      .ui.top.attached.tabular.menu
        %a.active.item{"data-tab" => "first"} Details
        %a.item{"data-tab" => "second"} Work Experience
      .ui.bottom.attached.active.tab.segment{"data-tab" => "first"}
        .box.box-success
          .box-body
            %table.ui.selectable.celled.table
              %tbody
                %tr
                  %td
                    %b Employee No:
                  %td= @employee.employee_no
                %tr
                  %td
                    %b Firstname:
                  %td= @employee.firstname
                %tr
                  %td
                    %b Lastname:
                  %td= @employee.lastname
                %tr
                  %td
                    %b Middlename:
                  %td= @employee.middlename
                %tr
                  %td
                    %b Position:
                  %td= @employee.position
                %tr
                  %td
                    %b Satus:
                  %td= @employee.status
                %tr
                  %td
                    %b Date Employed:
                  %td= @employee.date_employed
                %tr
                  %td
                    %b Working Years:
                  %td= @employee.total_year
                %tr
                  %td
                    %b Gender:
                  %td= @employee.gender
                %tr
                  %td
                    %b Birthdate:
                  %td= @employee.birthdate
                %tr  
                  %td
                    %b Email:
                  %td= @employee.email
                %tr
                  %td
                    %b Contact No:
                  %td= @employee.contact_no
                %tr
                  %td
                    %b Address:
                  %td= @employee.address
      .ui.bottom.attached.tab.segment{"data-tab" => "second"}
        .box.box-success
          .box-body
            = render partial:"employees/work_experiences/new"
            %table.ui.selectable.celled.table
              %thead
                %th Title
                %th Company Name
                %th Address
                %th Date Ended
                %th Actions
              %tbody
                - @work_experiences.each do |we|
                  %tr
                    %td= we.title
                    %td= we.company_name
                    %td= we.company_address
                    %td= we.date_ended
                    %td
                      = link_to "UPDATE", edit_employee_work_experience_path(we.employee, we), class: "btn btn-flat btn-xs btn-success"
                      = link_to "REMOVE", [we.employee, we],data: {:confirm => "Are you sure?"}, :method => :delete, class: "btn btn-flat btn-xs btn-danger"
:javascript
  $('.menu .item').tab();