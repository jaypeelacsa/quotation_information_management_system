%section.content-header
  %h1
    Petty Cash Voucher
    %small Control Panel
%section.content
  .row
    .col-md-3
      .box.box-default.box-solid
        .box-header
          %h3.box-title Search Tool
          .pull-right
            %i.inverted.circular.search.link.icon
        .box-body
          = render partial: "search"

    .col-md-9 
      .box.box-default.box-solid
        .box-header
          %h3.box-title Petty Cash Voucher List
        .box-body
          - if ( current_user.role == 'Admin' )
            .row
              .col-md-9
              .col-md-3  
                = link_to "NEW PETTY CASH VOUCHER", new_petty_voucher_path, class: "btn btn-block btn-primary"
          %table.ui.selectable.celled.table
            %thead
              %tr
                %th Reference No.
                %th Payee
                %th Date
                %th Actions
            %tbody
              - @petty_vouchers.each do |pv|
                %tr
                  %td= pv.reference_no
                  %td= pv.payee
                  %td= pv.petty_date
                  %td
                    = link_to "Details", petty_voucher_path(pv.id), class: "btn btn-flat btn-xs btn-default"